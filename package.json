{
  "name": "arcshield",
  "version": "0.1.0",
  "description": "Multi-Agent AI Security Scanner for Arc Ecosystem",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=@arcshield/cli",
    "dev:web": "npm run dev --workspace=@arcshield/web",
    "scan": "npm run scan --workspace=@arcshield/cli",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src --ext .ts",
    "format": "prettier --write \"packages/*/src/**/*.ts\""
  },
  "keywords": [
    "security",
    "scanner",
    "arc",
    "blockchain",
    "smart-contracts",
    "ai",
    "multi-agent",
    "vibe-coding"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
