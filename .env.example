# ArcShield Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# REQUIRED - API Keys
# ===========================================

# Anthropic API key for AI scanning
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# GitHub OAuth (for private repo scanning)
# ===========================================

# Create a GitHub OAuth App at: https://github.com/settings/developers
# Set callback URL to: https://your-domain.railway.app/api/auth/github/callback
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://your-domain.railway.app/api/auth/github/callback

# ===========================================
# Server Configuration
# ===========================================

# Port (Railway sets this automatically)
PORT=3501

# Frontend URL (set to your Railway domain)
FRONTEND_URL=https://your-domain.railway.app

# Base URL for badge embeds
BASE_URL=https://your-domain.railway.app

# ===========================================
# Rate Limiting
# ===========================================

MAX_SCANS_PER_HOUR=10
MAX_SCANS_PER_DAY=50
DAILY_SPENDING_CAP=5.00
